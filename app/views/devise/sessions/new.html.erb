<div class="signin">
<div class="col-md-6 col-md-offset-3">
	<div class="col-center">

  <p class="text-center"><img src="<%= asset_path 'logo-footer.png', class: 'logo' %>" width='300px' alt=""></p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }, label: false, placeholder: 'Your email' %>
  </div>
  <div class="form-group">
    <%= f.input :password, required: false, input_html: { class: 'form-control' }, label: false, placeholder: 'Your password' %>
  </div>


  <div class="control-group boolean optional user_remember_me checkbox">
  	<label class="boolean optional control-label" for="user_remember_me">
  		<input class="boolean optional" id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
  		Remember me
  	</label>
  	<input name="user[remember_me]" type="hidden" value="0" />
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: 'btn btn-success btn-lg' %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>