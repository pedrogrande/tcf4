<%= simple_form_for(@weekend_programme) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.association :popular_programme, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.association :location, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :day, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :date, label: 'Start date', input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :end_date, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :start_time, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :end_time, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :number_of_places, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :number_of_students_registered, input_html: { class: 'form-control'} %>
  </div>
  <%= f.button :submit %>
  
<% end %>
