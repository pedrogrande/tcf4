<h1 class="col-md-12">My skills</h1>
    <div class="col-md-12">
        <ul class="breadcrumb">
          <li><a href="#">Home</a> <span class="divider"></span></li>
          <li class="active">My skills</li>
        </ul>
    </div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
				
				<div class="col-left">
					<h2>Grade your skills</h2>
					<p>These are instructions on how to grade your skills.</p>
					<p>Perhaps there are some examples to help people decide their skill level.</p>
					<hr>
						<% if @user_skills %>
							<% @skill_groups.each do |skill_group| %>
								<% if skill_group.skills.count > 0 %>
									<div class="skill-group">
										<h3><%= skill_group.name %></h3>


										<% @user_skills.each do |user_skill| %>
											<% if skill_group.skills.include?(user_skill.skill) %>
												<div id="<%= user_skill.id %>" class="skill-buttons">
													<%= render user_skill %>
												</div>
											<% end %>
										<% end %>
									</div>
								<% end %>
							<% end %>
						<% end %>
	
					<br>
					<div class="clearfix">
					<div class="pull-right">
						<% if params[:programme] == 'new' %>
							<%= link_to 'See your personalised programme', new_programme_path, class: 'btn btn-success btn-lg' %>
						<% else %>
							<%= link_to 'Save and return to profile', profile_path(current_user.profile), class: 'btn btn-success btn-lg' %> 
						<% end %>

					</div></div>
				</div>
			</div>
		</div>
	</div>

			<% if @guest_user_skills %>
	<table class="table">
		
		
			<% @guest_user_skills.each_with_index do |user_skill, index| %>
				<% if skill_group.skills.include?(user_skill.skill) %>
					
						<tr>
							<td width="40%"><%= user_skill.skill.name %></td>
							<td id="user-skill-<%= index %>-skill-level-0"><%= link_to "None", choose_guest_user_skill_path(user_skill, skill_level: 0), class: button(user_skill, 0), remote: true %></td>
							<td id="user-skill-<%= index %>-skill-level-1"><%= link_to "Beginner", choose_guest_user_skill_path(user_skill, skill_level: 1), class: button(user_skill, 1), remote: true %></td>
							<td id="user-skill-<%= index %>-skill-level-2"><%= link_to "Experienced", choose_guest_user_skill_path(user_skill, skill_level: 2), class: button(user_skill, 2), remote: true %></td>
							<td id="user-skill-<%= index %>-skill-level-3"><%= link_to "Advanced", choose_guest_user_skill_path(user_skill, skill_level: 3), class: button(user_skill, 3), remote: true %></td>
							<td id="user-skill-<%= index %>-skill-level-4"><%= link_to "I could teach it", choose_guest_user_skill_path(user_skill, skill_level: 4), class: button(user_skill, 4), remote: true %></td>
							<td id="user-skill-<%= index %>-skill-level-5"><%= link_to "I have taught it", choose_guest_user_skill_path(user_skill, skill_level: 5), class: button(user_skill, 5), remote: true %></td>
						</tr>
				<% end %>

		<% end %>
	</table>
	<% end %>

<%= link_to "See your personalised programme", new_programme_path, class: 'btn btn-success btn-lg pull-right' %>

</div></div>
