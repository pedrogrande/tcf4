<h1>EventRegistrationMailer#received</h1>
<p>
  <strong>Event:</strong>
  <%= @event_registration.event.name %>, <%= @event_registration.event.location.name %>
</p>

<p>
  <strong>First name:</strong>
  <%= @event_registration.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @event_registration.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @event_registration.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @event_registration.phone %>
</p>

<p>
  <strong>Guests:</strong>
  <%= @event_registration.guests %>
</p>

<p>
  <strong>Optin:</strong>
  <%= @event_registration.optin %>
</p>

<%= link_to 'Link to registration', event_registration_url(@event_registration) %>