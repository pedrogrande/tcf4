<h1 class="col-md-12"><%= @post.title %></h1>
  <div class="col-md-12">
    <ul class="breadcrumb">
      <li><a href="<%= root_path %>">Home</a><span class="divider"></span></li>
            <li><a href="<%= blog_path %>">Blog</a><span class="divider"></span></li>
      <li class="active"><%= @post.title %></li>
    </ul>
  </div>
    
<!-- =========================Start Col left section ============================= -->
<aside class="col-md-4">
  <div class="col-left">
    <div class="sidebar">
        
       <div class="widget">
        <h4>Stay up to date with us!</h4>
            
            <div id="message-newsletter"></div>
              <form action="http://thecoderfactory.us7.list-manage1.com/subscribe/post?u=1c644187b6d7e06d32bcae158&amp;id=2afdc8b0c3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                    <div class="form-group">
                    <input type="email" value="" name="EMAIL" class="email form-control" id="mce-EMAIL" placeholder="email address" required></div><!-- 
                    real people should not fill this in and expect good things - do not remove this or risk form bot signups -->
                    <div style="position: absolute; left: -5000px;"><input type="text" name="b_1c644187b6d7e06d32bcae158_2afdc8b0c3" value=""></div>
                    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="btn btn-success"></div>
                </form>
          </div>
      </div>

      <hr>
      
      <div class="widget">
        <h4>Featured Article</h4>
        <p>
          when live add featured article lead and link
        </p>
        <p><a href="#" class="button_medium">Read more</a></p>
      </div><!-- End widget -->

      <hr>

      <div class="widget">
        <h4>Recent articles from coder factory</h4>
        <% if @posts %>
          <% @posts.limit(3).each do |post| %>
            <ul class="recent_post">
              <li>
                <i class="fa fa-calendar-o"></i>  <%= post.created_at.strftime('%A, %e %B %Y') %>
                <div><a href="<%= post_path(post) %>"><%= post.title %> </a></div>
              </li>
            </ul>
          <% end %>
        <% end %>
      </div><!-- End widget -->

      <hr>

      <div class="widget tags">
      <h4>Categories</h4>      
      <ul class="submenu-col">
        <% if @categories %>
          <% @categories.each do |cat| %>
            
              <li><a href="#"><%= cat.name %></a></li>
            
          <% end %>
        <% end %> 
      </ul>
      </div>

      <hr>
            
      <div class="widget tags">
        <h4>Tags</h4>
        <a href="#">Lorem ipsum</a>
        <a href="#">Dolor</a>
        <a href="#">Long established</a>
        <a href="#">Sit amet</a>
        <a href="#">Latin words</a>
        <a href="#">Excepteur sint</a>
      </div><!-- End widget -->
            
      <hr>
            
    </div>
  <!-- </div> --><!-- end  col left -->
  <%= render 'layouts/banner' %>
  </aside>
    
  <!-- =========================Start Col right section ============================= -->
<section class="col-md-8">
<div class="col-right">
  <div class="post">
    <h2><a href="<%= post_url %>"><%= @post.title %></a></h2>


    <img src="<%= asset_path @post.image %>" alt="" class="img-responsive">


    
    <div class="post_info clearfix">
      <div class="post-left">
        <ul>
          <li><i class="fa fa-calendar-o"></i> On <span><%= @post.created_at.strftime('%A, %e %B %Y') %></span></li>
          <li><i class="fa fa-user"></i> By <a href="#"><%= @post.user.profile.name if @post.user.profile %></a></li>
          <li><i class="fa fa-tags"></i> Tags <a href="#">Works</a> <a href="#">Personal</a></li>
        </ul>
      </div>
<!--       <div class="post-right"><i class="fa fa-comments"></i> <a href="#"> 25 </a>Comments</div>
 -->    </div>
    <p class="lead">
       <%= @post.lead %>
    </p>
    <p><%= @post.content.html_safe %></p>
    <div class="post-left">
        <ul>
          <li><i class="fa fa-book"></i> Posted in <a href="#"><%= @post.category %></a></li>
          </ul>
      </div>
    </div>
  </div><!-- end post -->
