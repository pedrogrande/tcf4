<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :published_date, input_html: { class: 'form-control'} %>
    </div>
  <div class="form-group">
    <%= f.association :user, input_html: { class: 'form-control'}, label_method: :email %>
    </div>
    <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control'} %>
    </div>
    <div class="form-group">
    <%= f.input :lead, input_html: { class: 'form-control', rows: 5} %>
    </div>
    <div class="form-group">
    <%= f.input :content, input_html: { class: 'form-control ckeditor', rows: 10} %>
    </div>
    <div class="form-group">
    <%= f.input :image_cache, as: :hidden %>
    <%= f.input :image, as: :file %>
    </div>

    <div class="form-group">
    <%= f.association :category, input_html: { class: 'form-control'} %>
    </div>
    <div class="form-group">
    <%= f.input :slug, input_html: { class: 'form-control'}, label: 'SEO URL (usually title-separated-by-hyphens)' %>
    </div>
    <div class="form-group">
    <%= f.input :tag_list, :label => 'Tags, separated by commas', input_html: { class: 'form-control' } %>
  </div>

    <div class="checkbox">
    <%= f.input :publish %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<br><br><br>
<%= javascript_include_tag "new_post", "data-turbolinks-track" => true %>
<script>
    $('.ckeditor').ckeditor({
      // optional config
    });
</script>