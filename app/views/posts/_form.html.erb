<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :published_date, input_html: { class: 'form-control'} %>
    </div>
  <div class="form-group">
    <%= f.association :user, input_html: { class: 'form-control'}, label_method: :email %>
    </div>
    <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control'} %>
    </div>
    <div class="form-group">
    <%= f.input :lead, input_html: { class: 'form-control', rows: 5} %>
    </div>
    <div class="form-group">
    <%= f.input :content, input_html: { class: 'form-control', rows: 10} %>
    </div>
    <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control'} %>
    </div>
    <div class="form-group">
    <%= f.input :publish %>
    </div>
    <div class="form-group">
    <%= f.association :category, input_html: { class: 'form-control'} %>
    </div>
    <div class="form-group">
    <%= f.input :slug, input_html: { class: 'form-control'}, label: 'URL' %>
    </div>
    <div class="form-group">
    <%= f.input :tag_list, :label => 'Tags', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
