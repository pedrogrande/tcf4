							</div>
							<div class="panel-body">
								<p class="lead"><%= unit.tagline %></p>
								<p><%= unit.description %></p>
								<a class="btn btn-primary" href="#">Enrol</a>
							</div>
						</div>
					</div>
				<% end %>
		
			</div>
		<% end %>
	</div>
