<h1>Listing payments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Payment method</th>
      <th>Payment price</th>
      <th>Credit points purchased</th>
      <th>User</th>
      <th>Payment received</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_method %></td>
        <td><%= payment.payment_price %></td>
        <td><%= payment.credit_points_purchased %></td>
        <td><%= payment.user %></td>
        <td><%= payment.payment_received %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
