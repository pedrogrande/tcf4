<h1 class="col-md-12"><i class="fa fa-edit"></i> Registration <small>Step 2 of 2</small></h1>
<hr><br>
<div class="col-md-5">
  <div class="col-left">
    <h2>Your selected programme</h2>
    <hr class="double">
    <div class="row">
      <div class="col-sm-4 text-right">
        <p class="lead">Programme</p>
      </div>
      <div class="col-sm-8">
        <p class="lead"><strong><%= @weekend_programme.popular_programme.name %></strong></p>
      </div>
    </div>
    <hr class="double">

    <div class="row">
      <div class="col-sm-4 text-right">
        <p class="lead">Days</p>
      </div>
      <div class="col-sm-8">
        <p class="lead"><strong><%= @weekend_programme.day %></strong></p>
      </div>
    </div>
    <hr class="double">
    <div class="row">
      <div class="col-sm-4 text-right">
        <p class="lead">Start date</p>
      </div>
      <div class="col-sm-8">
        <p class="lead"><strong><%= @weekend_programme.date.strftime('%e %b %Y') %></strong></p>
      </div>
    </div>
    <hr class="double">
    <div class="row">
      <div class="col-sm-4 text-right">
        <p class="lead">Location</p>
      </div>
      <div class="col-sm-8">
        <p class="lead"><strong><%= @weekend_programme.location.name + ', ' + @weekend_programme.location.city %></strong></p>
      </div>
    </div>
    <hr class="double">
    <div class="row">
      <div class="col-sm-4 text-right">
        <p class="lead">Price</p>
      </div>
      <div class="col-sm-8">
        <p class="lead"><strong>$<%= @weekend_programme.popular_programme.price %></strong></p>
      </div>
    </div>
    <hr class="double">


  </div>
</div>
<div class="col-md-7">
  <div class="col-right">
    <h2 class="text-muted">1. Complete your details <span class="text-success"><i class="fa fa-check-square-o"></i></span></h2>
    <hr class="double">
    <h2>2. Make a payment. <small></small></h2>
    <hr class="double">
    <p class="lead">Visa, MasterCard, and American Express are accepted and payments are processed through <a href="https://stripe.com/" target="_blank">Stripe</a>.</p> 
    <p class="lead">Please choose one of the following options. </p>
    <hr class="double">
    <div class="row">
      <div class="col-sm-6">
        <h3 class="text-center">Pay upfront and save</h3>
        <form accept-charset="UTF-8" action="/payments?amount=<%= @popular_programme.price * 100 %>&amp;guid=<%= @enrolment.guid %>" method="post"><div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" /></div>
            <noscript>You must <a href="http://www.enable-javascript.com" target="_blank">enable JavaScript</a> in your web browser in order to pay via Stripe.</noscript>
     
            <input 
                type="submit" 
                class="btn btn-success btn-xl btn-block"
                value="Pay $<%= @popular_programme.price %>"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-amount="<%= @popular_programme.price * 100 %>"
                data-currency="aud"
                data-name="Coder Factory"
                data-email="<%= @enrolment.email %>"
                data-image="<%= asset_path 'logo23.png' %>"
                data-description="<%= @popular_programme.name %>"
            />
     
            
          </form>
          <hr>
          <p class="lead text-center">No more to pay!</p>
        </div>
        <div class="col-sm-6">
        <h3 class="text-center">Pay a deposit*</h3>
          <form accept-charset="UTF-8" action="/payments?amount=10000&amp;guid=<%= @enrolment.guid %>" method="post"><div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" /></div>
              
          
              <input 
                  type="submit" 
                  class="btn btn-success btn-xl btn-block"
                  value="Pay $100"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-amount="10000"
                  data-currency="aud"
                  data-name="Coder Factory"
                  data-email="<%= @enrolment.email %>"
                  data-image="<%= asset_path 'logo23.png' %>"
                  data-description="Deposit on <%= @popular_programme.name %>"
              />
          
              
            </form>
            <hr>
            <p class="lead text-center">* A choice of payment plans will be provided and incur a 5% processing fee.</p>
        </div>



  </div>
</div>
<script src="https://checkout.stripe.com/v2/checkout.js"></script>
              
              <script>
              $(document).ready(function() {
                  $(':submit').on('click', function(event) {
                      event.preventDefault();
          
                      var $button = $(this),
                          $form = $button.parents('form');
          
                      var opts = $.extend({}, $button.data(), {
                          token: function(result) {
                              $form.append($('<input>').attr({ type: 'hidden', name: 'stripeToken', value: result.id })).submit();
                          }
                      });
          
                      StripeCheckout.open(opts);
                  });
              });
              </script>