<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :icon, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :price, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :link, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :tagline, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :date, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :start_time, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :end_time, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.association :location, input_html: { class: 'form-control'} %>
  </div>
  <%= f.button :submit %>
  
<% end %>
