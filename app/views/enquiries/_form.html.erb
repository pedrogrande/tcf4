<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :name, input_html: { class: 'form-control'}, placeholder: "Name", :autofocus => true  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :last_name, input_html: { class: 'form-control'}, placeholder: "Last Name"  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :email, input_html: { class: 'form-control'}, placeholder: "Email"  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :phone, input_html: { class: 'form-control'}, placeholder: "Phone"  %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.input :content, input_html: { class: 'form-control'}, placeholder: "How can we help?"  %>
      </div>
    </div>    
    <div class="col-md-12">
      <div class="form-group">
        <%= f.button :submit, 'Submit', class: "btn btn-info pull-right" %>
      </div>
    </div>
  </div>
<% end %>
