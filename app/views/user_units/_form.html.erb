<%= simple_form_for(@user_unit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :unit %>
    <%= f.input :commenced %>
    <%= f.input :completed %>
    <%= f.input :grade %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
