<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
    <%= f.input :info, input_html: { class: 'form-control', rows: 5 }  %>
  </div>
  <div class="form-group">
    <%= f.input :phone, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
  	<%= cl_image_tag(@profile.profile_picture) if @profile.profile_picture %>
    <%= f.input :profile_picture, as: :file %>
  </div>
  <div class="form-group">
    <%= f.input :google_plus, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
    <%= f.input :linkedin, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
    <%= f.input :twitter, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
    <%= f.input :github, input_html: { class: 'form-control' }  %>
  </div>
  <div class="form-group">
    <%= f.input :website, input_html: { class: 'form-control' }  %>
  </div>
  <div class="checkbox">
    <%= f.input :show_email, input_html: { class: 'form-control' }  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
