<%= simple_form_for(@popular_programme) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :intro, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :tagline, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control', rows: 15} %>
  </div>
  <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :icon, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :price, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.association :units, as: :check_boxes %>
  </div>
  <%= f.button :submit %>
  
<% end %>
