<h1>Listing referrers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact phone</th>
      <th>Company</th>
      <th>Referral code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referrers.each do |referrer| %>
      <tr>
        <td><%= link_to referrer.name, referrer %></td>
        <td><%= referrer.user.email %></td>
        <td><%= referrer.contact_phone %></td>
        <td><%= referrer.company %></td>
        <td><%= referrer.referral_code %></td>
        <td><%= link_to 'Show', referrer %></td>
        <td><%= link_to 'Edit', edit_referrer_path(referrer) %></td>
        <td><%= link_to 'Destroy', referrer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

