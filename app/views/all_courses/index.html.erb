<h1 class="col-md-12">All Modules</h1>
	<div class="col-md-12">
        <ul class="breadcrumb">
          <li><a href="<%= root_path %>">Home</a> <span class="divider"></span></li>
          <li class="active">All  Modules</li>
        </ul>
    </div>

<%= render 'layouts/module_sidebar' %>
 
<section class="col-md-8">
    <div class="col-right">
    
        <h2><%= @title %></h2>
        <p>Check out our modules. You can come along to just a single session or add as many as you like to your current programme. </p>
        <hr>

        <% @units.each do |unit| %>
        <div class="strip-lessons">
            <div class="row">
                <div class="col-md-3">
                    <div class="box-style-one borders"><img src="<%= asset_path 'lessons.png' %>" alt=""><h5><%= unit.skill_group.name %></h5></div>
                </div>
                <div class="col-md-9">

                        <h4><a href="<%= unit_path(unit) %>"><%= unit.name %></a> </h4>
                        <h4><span class="label label-default"><%= unit.workshop_credits %> credit points</span></h4>
                        <p><%= unit.tagline %></p>
                    
                        <p>
                            <a href="#" class="btn btn-success"><i class="fa fa-arrow-circle-o-right"></i> Enrol</a> 
                            <a href="#" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Add to programme</a>
                        </p>
                   

                        
                </div>
            </div>
        </div><!-- End Strip course -->
        <% end %>
           
           <div class=" pagination-centered">
               <ul class="pagination">
                    <li><a href="#">Prev</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">Next</a></li>
              </ul>
          </div><!-- end pagination-->
           
    </div><!-- end col right-->
  
</section>
            
            