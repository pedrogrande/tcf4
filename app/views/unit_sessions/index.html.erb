<h1>Unit Sessions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Unit</th>
      <th>Day</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Places</th>
      <th>Registered students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_sessions.each do |unit_session| %>
      <tr>
        <td><%= unit_session.unit.name %></td>
        <td><%= unit_session.day %></td>
        <td><%= unit_session.date.strftime('%d %B %Y') %></td>
        <td><%= unit_session.start_time.strftime('%H:%M') %></td>
        <td><%= unit_session.end_time.strftime('%H:%M') %></td>
        <td><%= unit_session.location.name %></td>
        <td><%= unit_session.number_of_places %></td>
        <td><%= unit_session.number_of_students_registered %></td>
        <td><%= link_to 'Show', unit_session %></td>
        <td><%= link_to 'Edit', edit_unit_session_path(unit_session) %></td>
        <td><%= link_to 'Destroy', unit_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

