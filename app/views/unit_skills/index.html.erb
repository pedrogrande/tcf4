<h1>Listing unit_skills</h1>

<table class="table">
  <thead>
    <tr>
      <th>Unit</th>
      <th>Skill</th>
      <th>Before skill level</th>
      <th>After skill level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_skills.each do |unit_skill| %>
      <tr>
        <td><%= unit_skill.unit %></td>
        <td><%= unit_skill.skill %></td>
        <td><%= unit_skill.before_skill_level %></td>
        <td><%= unit_skill.after_skill_level %></td>
        <td><%= link_to 'Show', unit_skill %></td>
        <td><%= link_to 'Edit', edit_unit_skill_path(unit_skill) %></td>
        <td><%= link_to 'Destroy', unit_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

