<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "The Coder Factory" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "The Coder Factory" %>">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <script src="<%= asset_path 'modernizr.custom.17475.js' %>"></script>
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  <![endif]-->
  <script src="//ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js"></script>
  <script>
    WebFont.load({
      google: {
        families: ['Comfortaa', 'Play']
      }
    });
  </script>
  <%= render 'layouts/icons' %>
  <%= render 'layouts/google_analytics' %>
  <style>
  body {
    /*background:#f8f8f8 url(<%= asset_path 'mac.jpg' %>) fixed;
    background-position: cover cover;*/
    background-color: #FEE;
    font:16px "Roboto", Helvetica, Arial, sans-serif;
    color: #444;
    -webkit-font-smoothing: antialiased !important; 
  }
  h1, h2, h3, h4, h5 { color: #555;}
  .form-control {
  background-color: white;
}
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input {
  background-color: white;
  }
  </style>
</head>
<body class="<%= 'signin' if devise_controller? %>">
<% if !devise_controller? %>
	<%= render 'layouts/header' %>
<% end %>
  <div class="container">
  <% if user_signed_in? %>
    <div class="row">
    <%= link_to "Admin", admin_path, class: 'btn btn-xs btn-default' %> 
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-xs btn-default' %>
    <% if current_user.profile %>
      <%= link_to "My profile", profile_path(current_user.profile), class: 'btn btn-default btn-xs' %>
    <% else %>
      <%= link_to "Create your profile", new_profile_path, class: 'btn btn-warning btn-xs' %>
    <% end %>
    <hr>
  <% end %>
		  <%= yield %>
    </div>
  </div>


</body>
</html>
