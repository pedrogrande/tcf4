      <% if @popular_posts %>
      <hr>
      <div class="widget">
        <h4>Popular articles</h4>
          <% @popular_posts.each do |post| %>
            <ul class="fa-ul">
              <li>
                <i class="fa-li fa fa-calendar-o"></i>  <%= post.created_at.strftime('%A, %e %B %Y') %>
                <div><a href="<%= post_path(post) %>"><%= post.title %> </a></div>
              </li>
            </ul>
          <% end %>
      </div><!-- End widget -->
      <% end %>

      <hr>
      <div class="widget tags">
      <h4>Categories</h4>      
      <ul class="submenu-col">
        <% if @categories %>
          <% @categories.each do |category| %>
            <% if category.posts.count > 0 %>
            
              <li><%= link_to category.name, blog_path(category: category) %></li>
            <% end %>
          <% end %>
        <% end %> 
      </ul>
      </div>

      
            
