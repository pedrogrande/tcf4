<!-- =========================Start Col left section ============================= -->

  <div class="col-left">
      <h3>Coder Factory Programmes</h3>
      <ul class="submenu-col">
          
          <% @popular_programmes.each do |popular_programme| %>
            <li><a href="<%= popular_programme_path(popular_programme) %>" id="<%= 'active' if current_page?('/popular_programmes/' + popular_programme.slug) %>"><i class="fa fa-<%= popular_programme.icon %>"></i> <%= popular_programme.name %></a></li>
          <% end %>

          
      </ul>
      
    </div>
    <%= render 'layouts/banner' %>
