<div class="col-sidebar">
      <div class="widget">
        <h3>Next programme</h3>
          
          <ul class="fa-ul">
          <% if @next_programme %>
            <li><i class="fa-li fa fa-map-marker"></i>
              <span class="all-caps">
                <%= @next_programme.location.city %>
              </span>: 
              <%= link_to @next_programme.location.name, @next_programme.location, target: '_blank' %>
            </li>
            <li>
              <i class="fa-li fa fa-calendar"></i>
              <%= @next_programme.day %><br>
            <%= @next_programme.date.strftime('%e %B') %> - <%= @next_programme.end_date.strftime('%e %B %Y') %>
            </li>
            <li>
              <i class="fa-li fa fa-clock-o"></i>
            <%= @next_programme.start_time.strftime('%l:%M%P') %> - <%= @next_programme.end_time.strftime('%l:%M%P') %>
            </li>
            <li>
              <i class="fa-li fa fa-dollar"></i>
            <%= @next_programme.popular_programme.price %>
            </li>
            </ul>
          <hr>
          <% end %>
      <% if @popular_post %>
      <div class="widget">
        <h4>Popular post</h4>
        <div class="row">
          
          <div class="col-md-12 popular-post">
            <span class="pull-left"><%= cl_image_tag(@popular_post.image, :width => 100, :height => 50, :crop => :fill) %> </span>
            <p>
              <a href="<%= post_path(@popular_post) %>"><%= @popular_post.title %> </a>
            </p>
          </div>
        </div>
      </div><!-- End widget -->
      <% end %>
      <hr>
      <% if @latest_post %>
      <div class="widget">
        <h4>Latest post</h4>
        <div class="row">
          
          <div class="col-md-12 popular-post">
            <span class="pull-left"><%= cl_image_tag(@latest_post.image, :width => 100, :height => 50, :crop => :fill) %> </span>
            <p>
              <a href="<%= post_path(@latest_post) %>"><%= @latest_post.title %> </a>
            </p>
          </div>
        </div>
      </div><!-- End widget -->
      <% end %>
      
      
            
