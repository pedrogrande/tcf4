<%= content_for :page_title, 'Coder Factory Locations - ' + @location.name + ', ' + @location.city %>
<%= content_for :title, 'Coder Factory Locations - ' + @location.name + ', ' + @location.city %>
<%= content_for :description, 'Coder Factory workshop locations include ' + @location.name + 'in ' + @location.city + ', ' + @location.state + ', ' + @location.country %>

<h1 class="col-md-12"><span class="fa-stack">
    <i class="fa fa-circle-thin fa-stack-2x"></i>
    <i class="fa fa-map-marker fa-stack-1x"></i>
  </span>
  <%= @location.name %>, <%= @location.city %></h1>
  <div class="col-md-12">
        <ul class="breadcrumb">
          <li><a href="<%= root_path %>">Home</a> <span class="divider"></span></li>
          <li class="active"><%= @location.name %></li>
        </ul>
    </div>

<div class="row">
 
<section class="col-md-8">
  <div class="col-sidebar">


<div class="row">
<div class="col-sm-5">
<%= cl_image_tag @location.logo, class: 'img-responsive' %>
<hr>
<h3>Address</h3>
<p>
  <%= @location.street %><br>
  <%= @location.suburb %> <%= @location.state %> <%= @location.postcode %>
</p>
<p>
  <%= link_to @location.map_link, class: 'btn btn-default', target: '_blank' do %><i class="fa fa-map-marker"></i> Map Link<% end %>
  <%= link_to @location.website, class: 'btn btn-default', target: '_blank' do %><i class="fa fa-globe"></i> Website<% end %>
</p>
</div>
<div class="col-sm-7">
  <%= @location.embed_map.html_safe if @location.embed_map %>
</div>
</div>

</div>
<% if @weekend_programmes %>
<div class="scheduled">
      <div class="col-sidebar">
      <h3>Scheduled programmes at <%= @location.name %></h3>
      <%= render @weekend_programmes %>
      <p>If you are interested in attending a Coder Factory workshop but these times don't suit you, please drop us a line via our <a href="/contact">contact page</a>.</p>
    </div>
    <% end %>  
</section>

  <div class="col-sm-4">
    <%= render 'layouts/location_sidebar' %>
  </div>

</div>
<br>