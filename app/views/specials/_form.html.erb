<%= simple_form_for(@special) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :recipient_email, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
      <div class="control-group select optional special_weekend_programme"><label class="select optional control-label" for="special_weekend_programme_id">Weekend programme</label><div class="controls"><select class="select optional form-control" id="special_weekend_programme_id" name="special[weekend_programme_id]"><option value=""></option>
      <% @weekend_programmes.each do |weekend_programme| %>
        <option value="<%= weekend_programme.id %>"><%= weekend_programme.popular_programme.name + ' - ' + weekend_programme.location.city + ': ' + weekend_programme.date.strftime('%d-%b-%y') %></option>
      <% end %>

  </select></div></div>
    </div>
  <div class="form-group col-md-5">
    <%= f.input :dollar_discount, input_html: { class: 'form-control'} %>
  </div>
  <div class="col-md-1">
  <h3>OR</h3>
  </div>
  <div class="form-group col-md-5">
    <%= f.input :percent_discount, input_html: { class: 'form-control'} %>
  </div>
  <%= f.button :submit %>
  
<% end %>
