<%= simple_form_for(@testimonial) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :featured %>
  </div>
   <div class="form-group">
    <%= f.input :quote, input_html: { class: 'form-control'} %>
  </div>
   <div class="form-group">
    <%= f.input :text, input_html: { class: 'form-control'} %>
  </div>
   <div class="form-group">
    <%= f.input :image, input_html: { class: 'form-control'} %>
  </div>
   <div class="form-group">
    <%= f.association :popular_programme, input_html: { class: 'form-control'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, input_html: { class: 'form-control'} %>
  </div>
<% end %>
