.logo {
	height: 100px;
}
.signin {
	background:#f8f8f8 url(<%= asset_path 'mac.jpg' %>) fixed;
    background-position: cover cover;
}
.all-caps {
	text-transform: uppercase;
	font-weight: bold;
}
.btn {
	border-radius: 0;
	border: 3px rgba(0,0,0,0.3) solid;
}
.btn-xl {
	padding: 10px 16px;
  font-size: 24px;
  line-height: 1.33;
  border-radius: 0px;
  border:4px rgba(0,0,0,0.3) solid;
}
.label {
	border-radius: 0;
}
.labels {
	font-size: 16px;
}
.form-control {
  display: block;
  width: 100%;
  height: 60px;
  padding: 6px 12px;
  font-size: 20px;
  line-height: 1.428571429;
  color: $brand-primary;
  background-color: transparent;
  background-image: none;
  border: 3px solid $light-grey;
  -webkit-border-radius: 0px !important;
         -moz-border-radius: 0px !important;
              border-radius: 0px !important;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,174,255, 0.2);
  box-shadow: inset 0 1px 1px rgba(0,174,255, 0.2);
  -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}
/** Forms **/
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input {
  background-color: transparent;
  border-bottom: 4px solid $light-grey;

   box-shadow:0 0 0px #e3e3e3 inset;
   -webkit-shadow:0 0 0px #e3e3e3 inset;
   -moz-shadow:0 0 0px #e3e3e3 inset;
  -webkit-transition: border linear .2s, box-shadow linear .2s;
  -moz-transition: border linear .2s, box-shadow linear .2s;
  -o-transition: border linear .2s, box-shadow linear .2s;
  transition: border linear .2s, box-shadow linear .2s;
  margin-bottom:20px;
  border-top:0;
  border-right: 0;
  border-left: 0;
}
select {
	-webkit-border-radius: 0px !important;
         -moz-border-radius: 0px !important;
              border-radius: 0px !important;
}
.panel {
  margin-bottom: 20px;
  background-color: #fff;
  border: 5px solid;
  border-radius: 0px;
  -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
          box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
}
.panel-heading {
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
}
.panel-footer {
  border-bottom-right-radius: 0px;
  border-bottom-left-radius: 0px;
}
.panel-info {
	border-color: $brand-info;
}
.panel-success {
	border-color: $brand-success;
}
.panel-warning {
	border-color: $brand-warning;
}
.strip-courses{
	background: rgba($dark-grey, 0.9);
	-webkit-border-radius: 0px;
	-moz-border-radius: 0px;
	border-radius: 0px;
	color: white;
	margin-bottom:10px;
	/*padding: 30px;*/
}
.strip-courses a {
	color: $brand-primary;
}
.strip-courses a:hover {
	color: $brand-warning;
}
.strip-courses small {
	color: $dark-grey;
	font-weight: bold;
}
.strip-courses a.btn {
	color: white;
}
.strip-courses .description{
	padding: 30px 25px;
	border: 5px solid $brand-primary;
	border-top: 0;
}

.title-course{
	background: $brand-primary;
	-webkit-border-top-left-radius: 0px;
	-webkit-border-top-right-radius: 0px;
	-moz-border-radius-topleft: 0px;
	-moz-border-radius-topright: 0px;
	border-top-left-radius: 0px;
	border-top-right-radius: 0px;
	color:#fff;
	position:relative;
	padding:5px 0 5px;
}
.title-course h3{
	font-size: 24px;
	padding: 3px 0 3px 0px;
	color:#fff;
	margin:0;
}
.title-course a {
	color: white;
}
.title-course a:hover{
	color: $brand-info;
	text-decoration: none;
}
ol {

	list-style-type: decimal-leading-zero;
}
ol li, ul li{
