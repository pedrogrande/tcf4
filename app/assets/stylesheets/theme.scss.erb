h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0 0 10px 0;
  font-family: inherit;
  font-weight: bold;
  line-height: 20px;
  color: inherit;
  text-rendering: optimizelegibility;
}
h1 {
  font-size: 38px;
  line-height: 40px;
  color: white;
}
h2 {
  font-size: 32px;
   line-height:36px;
}
h3 {
  font-size: 24px;
  line-height:28px;
}
h4 {
  font-size: 18px;
  ine-height:22px;
}
h5 {
  font-size: 14px;
  line-height:14px;
}
h6 {
  font-size: 12px;
}
p {
  margin: 0 0 15px 0;
}
.col-right p {
  margin: 0 0 25px 0;
  line-height: 1.5em;
}
hr {
  margin: 20px 0;
  border: 0;
  border-top: 1px solid #eeeeee;
}
iframe {
	width:100%;
	}
/** Links color **/
a {
  color: $brand-primary;
  text-decoration: none;
}
a:hover,
a:focus {
  color: $brand-warning;
  text-decoration: none;
}
.ie7 input.ie7-margin {
	margin-left:-30px;
}
.breadcrumb {
  margin: -15px 0 15px -15px;
  list-style: none;
  background:none;
}
/* #Site Header
================================================ */
header{
	background-color:#fff;
	padding:20px 0 20px 0;
}
header a {
	color: #fff;
}
#menu-top{
	float:right;
	color:#00AEEF;
	font-size:16px;
	margin-right:10px;
	margin-top:30px;
}
#menu-top ul li{
	display:inline-block;
	padding-right: 20px;
	zoom: 1; *display: inline;
}
#menu-top ul li a {
	color: $brand-primary;
}
#menu-top ul li a.active {
	color: $brand-warning;
}
#menu-top ul li a:hover {
	color:#F39C12;
	text-decoration: none;
}

.ie7 #menu-top ul li a {
	color:#fff;
	margin-left:5px;
}
